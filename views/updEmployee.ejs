<%- include('partials/header') %>

<div class="container">
    <div class="content">
        <h1>Update Employee</h1>
        <form action="/updEmployee" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= employee.name %>" required>
            </div>

            <div class="form-group">
                <label for="dob">Date of Birth:</label>
                <input type="date" class="form-control" id="dob" name="dob" value="<%= employee.dob.toISOString().split('T')[0] %>" required>
            </div>

            <div class="form-group">
                <label for="salary">Salary:</label>
                <input type="number" class="form-control" id="salary" name="salary" value="<%= employee.salary %>" required>
            </div>

            <div class="form-group">
                <label for="dept">Department:</label>
                <input type="text" class="form-control" id="dept" name="dept" value="<%= employee.dept %>" required>
            </div>

            <input type="hidden" name="id" value="<%= employee.id %>">

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
<%- include('partials/footer') %>