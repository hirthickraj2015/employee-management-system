<%- include('partials/header') %>

<div class="container">
    <div class="content">
        <h1>Find Employee Result for "<%= searchInput %>"</h1>
        <% if (employees && employees.length > 0) { %>
            <ul class="list-group">
                <% employees.forEach(employee => { %>
                    <li class="list-group-item">
                        <strong>Name:</strong> <%= employee.name %>, 
                        <strong>Age:</strong> <%= employee.age %>, 
                        <strong>Date of Birth:</strong> <%= employee.dob.toISOString().split('T')[0] %>, 
                        <strong>Salary:</strong> <%= employee.salary %>, 
                        <strong>Department:</strong> <%= employee.dept %>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No matching employees found.</p>
        <% } %>
        <a href="/findEmployee" class="btn btn-primary mt-3">Back to Find</a>
    </div>
    <a href="/" class="back-link"><button class="btn btn-primary">Back to Home</button></a>
</div>
<%- include('partials/footer') %>
