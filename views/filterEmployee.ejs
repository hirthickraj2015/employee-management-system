<%- include('partials/header') %>
<div class="container">
    <div class="content">
        <h1>Filtering Criterias</h1>
        <form action="/filterEmployee" method="post">
            
            <div class="form-group">
                <label for="ageMin">Minimum Age:</label>
                <input type="text" id="ageMin" name="age[min]" class="form-control">
            </div>

            <div class="form-group">
                <label for="ageMax">Maximum Age:</label>
                <input type="text" id="ageMax" name="age[max]" class="form-control">
            </div>

            <div class="form-group">
                <label for="salaryMin">Minimum Salary:</label>
                <input type="text" id="salaryMin" name="salary[min]" class="form-control">
            </div>

            <div class="form-group">
                <label for="salaryMax">Maximum Salary:</label>
                <input type="text" id="salaryMax" name="salary[max]" class="form-control">
            </div>

            <div class="form-group">
                <label for="dept">Department:</label>
                <input type="text" id="dept" name="dept" class="form-control">
            </div>
            

            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
    <a href="/" class="back-link"><button class="btn btn-primary">Back to Home</button></a>
</div>
<%- include('partials/footer') %>